#include <stdio.h>
#include <fcntl.h>
#include "fillit.h"

int main(int ac, char **av)
{
	int fd;
	int i;
	int a;
//	int b, c;

//	b = 0;
//	c = 0;
	ac++;
	t_tetrisa h;

	fd = open(av[1], O_RDONLY);
	
	while ((a = ft_test(fd, &h)) != 0)
	{
		i = 0;
		while (i < 4)
		{
		printf("%s\n", h.tetri[i]);
		i++;
		}
		printf("\n");
	}
	printf("%d\n", a);
	return (0);
}
